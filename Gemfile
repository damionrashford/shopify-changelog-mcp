# frozen_string_literal: true

source 'https://rubygems.org'

# MCP SDK for Ruby
gem 'mcp', '~> 0.2.0'

# HTTP client for fetching RSS feeds
gem 'net-http'
gem 'uri'

# XML parsing for RSS feed
gem 'nokogiri', '~> 1.12'

# JSON processing
gem 'json', '~> 2.5'

# Time and date handling
gem 'time'

# Logger for Ruby 3.5+ compatibility
gem 'logger'

# Development dependencies
group :development do
  gem 'debug'
  gem 'rubocop', require: false
end
